{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Launch API Development",
      "request": "launch",
      "runtimeArgs": ["run", "start:debug:dev"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "name": "Launch API Local",
      "request": "launch",
      "runtimeArgs": ["run", "start:debug:local"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "name": "Launch API Production",
      "request": "launch",
      "runtimeArgs": ["run", "start:debug:production"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal"
    }
  ]
}
